<h1>Twistees</h1>

<table>
  <thead>
    <tr>
      <th>Twistee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @twistees.each do |twistee| %>
      <tr>
        <td><%= twistee.twistee %></td>
        <td><%= link_to 'Show', twistee %></td>
        <td><%= link_to 'Edit', edit_twistee_path(twistee) %></td>
        <td><%= link_to 'Destroy', twistee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

