<div class="column is-half">
  <% if user_signed_in? %>
  <article class='media box'>
    <figure class='media-left'>
      <p class='image is-64x64'>
        <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
      </p>
    </figure>
    <div class="media-content">
      <%= render 'twistees/form' %>
    </div>
  </article>
  <% end %>

<% @twistees.each do | twistee | %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class='image is-64x64'>
          <%= gravatar_image_tag(twistee.user.email, size: 64, alt: twistee.user.name) %>
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <strong><%= twistee.user.name %></strong><br />
          <small><%= twistee.user.username %></small><br />
          <p><%= twistee.twistee %></p>
        </div>
        <% if user_signed_in? %>
          <nav class='level'>
            <div class="level-left is-mobile">
              <%= link_to twistee, class: 'level-item' do %>
                <span class="icon"><i class='fa fa-link' aria-hidden='true'></i></span>
              <% end %>
              <%= link_to edit_twistee_path(twistee), class: 'level-item' do %>
                <span class='icon'><i class='fa fa-pencil' aria-hidden='true'></i></span>
              <% end %>
              <%= link_to twistee, method: :delete, data: { confirm: 'Are You Sure You Want to Delete This Twist?'} do %>
                <span class='icon'><i class='fa fa-trash-o' aria-hidden='true'></i></span>
              <% end %>
            </div>
          </nav>
        <% end %>
      </div>
    </article>
  </div>
<% end %>
</div>
