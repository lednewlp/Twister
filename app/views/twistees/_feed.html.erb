<div class="column is-half">
  <article class='media box'>
    <figure class='media-left'>
      <p class='image is-64x64'>
        <img src="https://bulma.io/images/placeholders/64x64.png">
      </p>
    </figure>
    <div class="media-content">
      <%= render 'twistees/form' %>
    </div>
  </article>

<% @twistees.each do | twistee | %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class='image is-64x64'>
          <img src="https://bulma.io/images/placeholders/64x64.png">
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <strong>Wendel Lopes</strong><br />
          <small>@lenewlp</small><br />
          <p><%= twistee.twistee %></p>
        </div>
        <nav class='level'>
          <div class="level-left is-mobile">
            <%= link_to twistee, class: 'level-item' do %>
              <span class="icon"><i class='fa fa-link' aria-hidden='true'></i></span>
            <% end %>
            <%= link_to edit_twistee_path(twistee), class: 'level-item' do %>
              <span class='icon'><i class='fa fa-pencil' aria-hidden='true'></i></span>
            <% end %>
            <%= link_to twistee, method: :delete, data: { confirm: 'Are You Sure You Want to Delete This Twist?'} do %>
              <span class='icon'><i class='fa fa-trash-o' aria-hidden='true'></i></span>
            <% end %>
          </div>
        </nav>
      </div>
    </article>
  </div>
<% end %>
</div>
